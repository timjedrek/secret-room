
<div class="flex flex-col md:flex-row md:justify-center">
  <div class="flex items-center justify-center p-6 p-12">
    <div class="w-full">
      
      <% if notice.present? %>
        <p class="my-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" id="notice"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="my-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" id="alert"><%= alert %></p>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= devise_error_messages! %>
      <h1 class="mb-4 text-2xl font-bold text-center text-gray-700">
        Sign In
      </h1>
      <div class="mt-4">
        <%= f.label :email, class: "text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full px-4 py-2 text-sm border rounded-md focus:border-brightRedLight focus:outline-none focus:ring-1 focus:ring-brightRedLight" %>
      </div>
      <div>
          <%= f.label :password, class: "text-sm" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full px-4 py-2 text-sm border rounded-md focus:border-brightRedLight focus:outline-none focus:ring-1 focus:ring-brightRedLight"  %>
      </div>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me, class: "text-brightRed bg-gray-100 rounded border-gray-300" %>
        <%= f.label :save_login_for_next_time, class: "text-sm" %>
      <% end %>
      <br>
      <%= f.submit "Log in", class: "block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-brightRed border border-transparent rounded-full active:bg-brightRedLight hover:bg-brightRedLight focus:outline-none focus:shadow-outline-red" %>

      <div class="mt-4 text-center">
        <p class="text-sm">Don't have an account yet? 
          <%= link_to 'Sign up.', new_user_registration_path, class: "text-brightRed hover:underline" %>
        </p>
        <p class="text-sm">Did you 
          <%= link_to "forget your password?", new_password_path(resource_name), class: "text-brightRed hover:underline" %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>