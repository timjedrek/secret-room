  <% @secrets.reverse_each do | secret | %>
  <div id="<%= dom_id secret %>" class="bg-slate-100 rounded-xl p-2 m-1 mt-5">
    <p class="">
      <!--The title / headline of the secret-->
      <strong class="block font-medium mb-1"><%= secret.title %></strong>

      <!--Content.. the secret itself-->
      <div class="">
        <%= secret.content %>
      </div>

      <!--Signature-->
      <div class="text-xs flex text-gray-400 justify-end">
        Anonymous user<br>
        <%= secret.created_at.strftime("%B %d, %Y") %>
      <br>
      </div>
    </p>
  </div>
  <% end %>