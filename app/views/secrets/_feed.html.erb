  <div class="md:grid md:grid-cols-3 md:gap-4">
  <% @secrets.reverse_each do | secret | %>
    <div id="<%= dom_id secret %>" class="bg-slate-100 rounded-xl p-2 m-1 mt-5 flex flex-col justify-between">
      <div class="">
        <p class="">
          <!--The title / headline of the secret-->
          <strong class="block font-medium mb-1"><%= secret.title %></strong>

          <!--Content.. the secret itself-->
          <div class="">
            <%= secret.content %>
          </div>
        </p>
      </div>
      
      <!--Signature-->
      <div class="text-xs flex text-gray-400 justify-end">
        <!--Username-->
        <% if user_signed_in? %>
          @<%= secret.user.username %> <br>
        <% else %>
          Anonymous user <br>
        <% end %>
        <!--Time Stamp-->
        <%= secret.created_at.strftime("%B %d, %Y") %>
        <br>
        </div>

    </div>

  <% end %>
  </div>