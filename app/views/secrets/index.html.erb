<main class="container mx-auto px-5 flex">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render "form", secret: @secret %>
    <div id="secrets" class="min-w-full">
      <%= render 'feed' %>
    </div>
  </div>
</main>
